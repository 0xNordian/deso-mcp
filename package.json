{
  "name": "deso-mcp-server",
  "version": "3.0.0",
  "description": "Comprehensive DeSo Development Assistant MCP Server with HTTP transport",
  "main": "deso-mcp.js",
  "type": "module",
  "scripts": {
    "start": "node deso-mcp.js",
    "dev": "node --watch deso-mcp.js",
    "test": "node test-http.js",
    "docker:build": "docker build -t deso-mcp-server .",
    "docker:run": "docker run -p 3000:3000 -e PORT=3000 -e HOST=0.0.0.0 deso-mcp-server"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "deso",
    "blockchain",
    "development",
    "debugging",
    "http"
  ],
  "author": "DeSo Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/deso-protocol/mcp-server"
  }
}
